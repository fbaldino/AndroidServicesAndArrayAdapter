<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="samplemodules.fileaccess.MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Text to save"
        android:ems="10"
        android:layout_marginStart="9dp"
        android:id="@+id/EdtFileText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/BtnSaveFile"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnSaveFile"
        android:layout_marginEnd="64dp"
        android:layout_alignBaseline="@+id/BtnReadFromFile"
        android:layout_alignBottom="@+id/BtnReadFromFile"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Filename"
        android:ems="10"
        android:id="@+id/EdtFilename"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/EdtFileText"
        android:layout_marginBottom="30dp" />

    <Button
        android:text="Ler do Arquivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnReadFromFile"
        android:layout_above="@+id/EdtFilename"
        android:layout_alignEnd="@+id/EdtFilename"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="25dp" />

</RelativeLayout>
